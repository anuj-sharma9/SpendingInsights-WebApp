# EXAMPLE: Copy this to secrets.yaml and fill in real values
# DO NOT commit secrets.yaml to git!
#
# Instructions:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Base64 encode your values: echo -n "your-value" | base64
# 3. Replace placeholders below with base64-encoded values
# 4. Apply: kubectl apply -f secrets.yaml
#
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: spending-app
type: Opaque
data:
  # Database credentials (base64 encoded)
  # echo -n "your-db-password" | base64
  db-password: <BASE64_DB_PASSWORD>
  
  # Firebase Service Account JSON (base64 encoded)
  # cat ServiceAccount.json | base64 -w 0
  firebase-service-account: <BASE64_FIREBASE_SERVICE_ACCOUNT_JSON>
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: app-config
  namespace: spending-app
data:
  DB_URL: "jdbc:postgresql://postgres:5432/spending"
  DB_USER: "spending"
  REDIS_HOST: "redis"
  REDIS_PORT: "6379"

